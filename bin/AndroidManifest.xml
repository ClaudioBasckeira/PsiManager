            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".TabsFragment"
            android:label="@string/title_activity_tabs_fragment" >
        </activity>
        <activity
            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".ListsFragment"
            android:label="@string/title_activity_lists_fragment" >
        </activity>
        <activity
            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".PowersFragment"
            android:label="@string/title_activity_powers_fragment" >
        </activity>
    </application>

</manifest>